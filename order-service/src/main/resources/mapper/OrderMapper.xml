<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tqz.alibaba.cloud.order.mapper.OrderMapper">

    <update id="changeStatus">
        update t_order set status = #{status} where id = #{id}
    </update>

    <select id="selectByNo" resultType="com.tqz.alibaba.cloud.order.po.Order">
        select *  from t_order WHERE ORDER_NO = #{orderNo}
    </select>
</mapper>